<%- include("partials/header"); -%>




<div class="row justify-content-center">


  <div class="card col-lg-4 col-md-6" >

    <div class="card-body pt-3 pb-0">
      <div class="col">

           <h2><i class="fas fa-map-marker-alt"></i> <%=query%></h2>

      </div>
      <hr class="crd">
    </div>
    <div class="card-body pb-0">
        <div class="row">
          <div class="col">
            <%=currentDay%>
          </div>
          <div class="col">
            <%=currentMonth%> <%=today%>, <%=currentYear%>
          </div>
        </div>
          <hr class="crd">
    </div>
    <div class="card-body">
        <div class="row">
          <div class="col">
            <img src= <%=iconURL%> alt="img" style="width:10rem">
            <h1><%= weatherDescription %></h1>
          </div>
          <div class="col p-2">
            <p> <%=temperature%>°</p>
            <h3>Feels like <%=feelsLikeTemp%>°</h3>
          </div>
          <hr class="crd">
          <div class="col">
            <h3><i class="fas fa-wind"></i> <%=speed%>Km/h</h3>
          </div>
          <div class="col">
            <h3><i class="fas fa-tint"></i> <%=humidity%>%</h3>
          </div>

        </div>
    </div>
  </div>


</div>





<%- include("partials/footer"); -%>
